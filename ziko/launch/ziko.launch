<?xml version="1.0"?>
<launch>
  <arg name="model" default="ziko"/>
  <arg name="x_pos" default="3.0"/>
  <arg name="y_pos" default="0.0"/>
  <arg name="z_pos" default="5.0"/>
  <arg name="verbose" default="true"/>

  <remap from="/gps/fix" to="/fix"/>
  
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
	  <arg name="world_name" value="$(find ziko)/worlds/empty.world"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>

  <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model"
	    args="-z 1.0 -unpause -sdf -model ziko -file $(find ziko)/model/model.sdf  " respawn="false" output="screen" />

  <node 
    pkg="robot_localization" 
    type="ekf_localization_node" 
    name="ekf" 
    clear_params="true">
    <rosparam command="load" file="$(find ziko)/param/ekf_params.yaml"/>
   </node>
   <node pkg="move_basic"
	 type="move_basic"
	 name="move_basic">
	 <param name="max_linear_velocity" value="0.25"/>
	 <param name="max_angular_velocity" value="0.15"/>
   </node>

   <!--node
     pkg="robot_localization" 
     type="navsat_transform_node" 
     name="navsat_transform" >
    <rosparam command="load" file="$(find ziko)/param/navsat_trans.yaml"/>
   </node-->

</launch>

